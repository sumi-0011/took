{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@HOC/*": ["HOC/*"],
      "@hooks/*": ["hooks/*"],
      "@images/*": ["images/*"],
      "@navigations/*": ["navigations/*"],
      "@recoil/*": ["recoil/*"],
      "@screens/*": ["screens/*"],
      "types/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
